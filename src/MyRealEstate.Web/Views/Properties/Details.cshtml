@model MyRealEstate.Web.Models.PublicPropertyDetailViewModel
@{
    ViewData["Title"] = Model.Property.Title;
}

<div class="container py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Properties</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Property.Title</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Property Images & Details -->
        <div class="col-lg-8">
            <!-- Image Gallery -->
            <div class="card shadow-sm mb-4">
                @if (Model.Property.Images.Any())
                {
                    <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-indicators">
                            @for (int i = 0; i < Model.Property.Images.Count; i++)
                            {
                                <button type="button" data-bs-target="#propertyCarousel" data-bs-slide-to="@i" 
                                        class="@(i == 0 ? "active" : "")" aria-current="@(i == 0 ? "true" : "false")" 
                                        aria-label="Slide @(i + 1)"></button>
                            }
                        </div>
                        <div class="carousel-inner">
                            @for (int i = 0; i < Model.Property.Images.Count; i++)
                            {
                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                    <img src="@Model.Property.Images[i].Url" class="d-block w-100" alt="Property image @(i + 1)" 
                                         style="height: 500px; object-fit: cover;">
                                </div>
                            }
                        </div>
                        <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>
                }
                else
                {
                    <div class="bg-light d-flex align-items-center justify-content-center" style="height: 500px;">
                        <i class="bi bi-house-door text-muted" style="font-size: 6rem;"></i>
                    </div>
                }
            </div>

            <!-- Property Details -->
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <h1 class="card-title h2 mb-3">@Model.Property.Title</h1>
                    <p class="text-primary fw-bold fs-3 mb-3">
                        @Model.Property.Price.ToString("N0") @Model.Property.Currency
                    </p>
                    
                    <!-- Property Features -->
                    <div class="row mb-4">
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-door-open text-primary fs-3"></i>
                                <div class="mt-2 fw-bold">@Model.Property.Bedrooms</div>
                                <small class="text-muted">Bedrooms</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-droplet text-primary fs-3"></i>
                                <div class="mt-2 fw-bold">@Model.Property.Bathrooms</div>
                                <small class="text-muted">Bathrooms</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-arrows-fullscreen text-primary fs-3"></i>
                                <div class="mt-2 fw-bold">@Model.Property.AreaSqM</div>
                                <small class="text-muted">Square Meters</small>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-building text-primary fs-3"></i>
                                <div class="mt-2 fw-bold">@Model.Property.PropertyType</div>
                                <small class="text-muted">Type</small>
                            </div>
                        </div>
                    </div>

                    <!-- Description -->
                    <h3 class="h5 mb-3">Description</h3>
                    <p class="text-muted">@Model.Property.Description</p>

                    <!-- Location -->
                    <h3 class="h5 mb-3 mt-4">Location</h3>
                    <p class="text-muted">
                        <i class="bi bi-geo-alt"></i> 
                        @Model.Property.Address.Line1
                        @if (!string.IsNullOrEmpty(Model.Property.Address.Line2))
                        {
                            <text>, @Model.Property.Address.Line2</text>
                        }
                        <br>
                        @Model.Property.Address.City, @Model.Property.Address.PostalCode
                        <br>
                        @Model.Property.Address.Country
                    </p>
                </div>
            </div>
        </div>

        <!-- Inquiry Form -->
        <div class="col-lg-4">
            <div class="card shadow-sm sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-envelope"></i> Interested? Send an Inquiry
                    </h5>
                </div>
                <div class="card-body">
                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <form asp-controller="Inquiries" asp-action="Create" method="post">
                        <input type="hidden" name="PropertyId" value="@Model.Property.Id" />
                        
                        <div class="mb-3">
                            <label for="VisitorName" class="form-label">Your Name <span class="text-danger">*</span></label>
                            <input name="VisitorName" id="VisitorName" class="form-control" required placeholder="John Doe" />
                        </div>

                        <div class="mb-3">
                            <label for="VisitorEmail" class="form-label">Email <span class="text-danger">*</span></label>
                            <input name="VisitorEmail" id="VisitorEmail" type="email" class="form-control" required placeholder="john@example.com" />
                        </div>

                        <div class="mb-3">
                            <label for="VisitorPhone" class="form-label">Phone</label>
                            <input name="VisitorPhone" id="VisitorPhone" type="tel" class="form-control" placeholder="+216 XX XXX XXX" />
                        </div>

                        <div class="mb-3">
                            <label for="Message" class="form-label">Your Message <span class="text-danger">*</span></label>
                            <textarea name="Message" id="Message" class="form-control" rows="5" required 
                                      placeholder="I'm interested in this property. I would like to schedule a viewing..."></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 py-2">
                            <i class="bi bi-send"></i> Send Inquiry
                        </button>

                        <div class="mt-3 text-muted small">
                            <i class="bi bi-info-circle"></i> 
                            You'll receive a tracking link to follow up on your inquiry.
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
