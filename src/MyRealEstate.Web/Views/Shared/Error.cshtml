@using System.Diagnostics
@model ErrorViewModel
@inject Microsoft.AspNetCore.Hosting.IWebHostEnvironment HostEnvironment
@{
    ViewData["Title"] = "Error";
    var isDevelopment = HostEnvironment.EnvironmentName == "Development";
    var activity = Activity.Current;
    var traceId = activity?.Id ?? Model.RequestId;
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            @if (isDevelopment)
            {
                <!-- Development Environment - Detailed Error -->
                <div class="card border-danger">
                    <div class="card-header bg-danger text-white">
                        <h4 class="mb-0">
                            <i class="bi bi-exclamation-triangle-fill"></i> Development Error
                        </h4>
                    </div>
                    <div class="card-body">
                        <div class="alert alert-warning mb-4">
                            <i class="bi bi-info-circle-fill"></i>
                            <strong>Developer Note:</strong> This detailed error page is only visible in Development mode. 
                            In Production, users will see a friendly error message instead.
                        </div>

                        @if (ViewData["Exception"] != null)
                        {
                            var exception = ViewData["Exception"] as Exception;
                            <div class="mb-4">
                                <h5 class="text-danger">
                                    <i class="bi bi-bug-fill"></i> Exception Details
                                </h5>
                                <div class="bg-light p-3 rounded">
                                    <p class="mb-2">
                                        <strong>Type:</strong> 
                                        <code class="text-danger">@exception?.GetType().Name</code>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Message:</strong>
                                        <code class="text-danger">@exception?.Message</code>
                                    </p>
                                </div>
                            </div>

                            @if (!string.IsNullOrEmpty(exception?.StackTrace))
                            {
                                <div class="mb-4">
                                    <h5 class="text-danger">
                                        <i class="bi bi-stack"></i> Stack Trace
                                    </h5>
                                    <pre class="bg-dark text-white p-3 rounded" style="max-height: 400px; overflow-y: auto; font-size: 0.85rem;">@exception.StackTrace</pre>
                                </div>
                            }

                            @if (exception?.InnerException != null)
                            {
                                <div class="mb-4">
                                    <h5 class="text-danger">
                                        <i class="bi bi-arrow-return-right"></i> Inner Exception
                                    </h5>
                                    <div class="bg-light p-3 rounded">
                                        <p class="mb-2">
                                            <strong>Type:</strong>
                                            <code class="text-danger">@exception.InnerException.GetType().Name</code>
                                        </p>
                                        <p class="mb-2">
                                            <strong>Message:</strong>
                                            <code class="text-danger">@exception.InnerException.Message</code>
                                        </p>
                                        @if (!string.IsNullOrEmpty(exception.InnerException.StackTrace))
                                        {
                                            <details class="mt-3">
                                                <summary class="cursor-pointer text-primary">Show Inner Stack Trace</summary>
                                                <pre class="bg-dark text-white p-3 rounded mt-2" style="max-height: 300px; overflow-y: auto; font-size: 0.85rem;">@exception.InnerException.StackTrace</pre>
                                            </details>
                                        }
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="alert alert-danger">
                                <h5>
                                    <i class="bi bi-exclamation-octagon"></i> An Error Occurred
                                </h5>
                                <p class="mb-0">An unexpected error occurred while processing your request. No exception details available.</p>
                            </div>
                        }

                        @if (Model.ShowRequestId)
                        {
                            <div class="mt-3">
                                <p class="text-muted mb-0">
                                    <i class="bi bi-fingerprint"></i>
                                    <strong>Request ID:</strong> <code>@Model.RequestId</code>
                                </p>
                                <p class="text-muted mb-0">
                                    <i class="bi bi-diagram-3"></i>
                                    <strong>Trace ID:</strong> <code>@traceId</code>
                                </p>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex justify-content-between align-items-center">
                            <a href="javascript:history.back()" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Go Back
                            </a>
                            <a href="/" class="btn btn-primary">
                                <i class="bi bi-house"></i> Go Home
                            </a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <!-- Production Environment - User Friendly Error -->
                <div class="card border-0 shadow-lg">
                    <div class="card-body text-center p-5">
                        <div class="mb-4">
                            <i class="bi bi-exclamation-circle text-warning" style="font-size: 5rem;"></i>
                        </div>
                        <h1 class="display-4 mb-3">Oops! Something went wrong</h1>
                        <p class="lead text-muted mb-4">
                            We're sorry, but we encountered an unexpected error while processing your request.
                        </p>
                        
                        <div class="alert alert-light border mb-4">
                            <p class="mb-2">
                                <i class="bi bi-info-circle"></i>
                                <strong>Don't worry!</strong> Our team has been notified and we're working on it.
                            </p>
                            @if (Model.ShowRequestId)
                            {
                                <p class="text-muted small mb-0">
                                    <i class="bi bi-fingerprint"></i>
                                    Reference ID: <code>@Model.RequestId</code>
                                </p>
                            }
                        </div>

                        <div class="row g-3 justify-content-center">
                            <div class="col-auto">
                                <a href="javascript:history.back()" class="btn btn-outline-secondary btn-lg">
                                    <i class="bi bi-arrow-left"></i> Go Back
                                </a>
                            </div>
                            <div class="col-auto">
                                <a href="/" class="btn btn-primary btn-lg">
                                    <i class="bi bi-house-fill"></i> Go to Homepage
                                </a>
                            </div>
                        </div>

                        <div class="mt-5 pt-4 border-top">
                            <h5 class="mb-3">What can you do?</h5>
                            <div class="row g-3 text-start">
                                <div class="col-md-4">
                                    <div class="d-flex">
                                        <i class="bi bi-arrow-clockwise text-primary me-2 fs-4"></i>
                                        <div>
                                            <strong>Try Again</strong>
                                            <p class="text-muted small mb-0">Sometimes a simple refresh solves the issue</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex">
                                        <i class="bi bi-house-door text-primary me-2 fs-4"></i>
                                        <div>
                                            <strong>Return Home</strong>
                                            <p class="text-muted small mb-0">Start fresh from our homepage</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex">
                                        <i class="bi bi-envelope text-primary me-2 fs-4"></i>
                                        <div>
                                            <strong>Contact Support</strong>
                                            <p class="text-muted small mb-0">We're here to help you out</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .cursor-pointer {
        cursor: pointer;
    }
    
    details summary:hover {
        text-decoration: underline;
    }
    
    pre {
        white-space: pre-wrap;
        word-wrap: break-word;
    }
</style>
