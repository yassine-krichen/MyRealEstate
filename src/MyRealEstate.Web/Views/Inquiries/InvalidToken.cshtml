@{
    ViewData["Title"] = "Invalid Tracking Link";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 text-center">
            <div class="card shadow-lg border-0">
                <div class="card-body p-5">
                    <!-- Error Icon -->
                    <div class="mb-4">
                        <i class="bi bi-exclamation-triangle-fill text-warning" style="font-size: 5rem;"></i>
                    </div>

                    <!-- Error Message -->
                    <h1 class="display-6 fw-bold text-dark mb-3">Invalid Tracking Link</h1>
                    <p class="lead text-muted mb-4">
                        We couldn't find an inquiry matching this tracking link.
                    </p>

                    <!-- Possible Reasons -->
                    <div class="text-start bg-light p-4 rounded mb-4">
                        <h6 class="fw-bold mb-3">Possible reasons:</h6>
                        <ul class="mb-0">
                            <li class="mb-2">The link may have been copied incorrectly</li>
                            <li class="mb-2">The tracking token may have expired or been removed</li>
                            <li>You may need to check your email for the correct link</li>
                        </ul>
                    </div>

                    <!-- Actions -->
                    <div class="d-grid gap-2">
                        <a asp-controller="Properties" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-house-door"></i> Browse Properties
                        </a>
                        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
                            <i class="bi bi-house"></i> Go to Homepage
                        </a>
                    </div>

                    <!-- Help -->
                    <div class="mt-4 pt-4 border-top">
                        <p class="text-muted small mb-0">
                            <i class="bi bi-question-circle"></i> 
                            Need help? Contact our support team for assistance.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
