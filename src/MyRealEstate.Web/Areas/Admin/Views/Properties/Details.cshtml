@model MyRealEstate.Web.Models.PropertyDetailViewModel

@{
    ViewData["Title"] = Model.Title;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">@Model.Title</h1>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="bi bi-pencil"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-8">
            @if (Model.Images.Any())
            {
                <div class="card mb-3">
                    <div class="card-body p-0">
                        <div id="propertyCarousel" class="carousel slide" data-bs-ride="carousel">
                            <div class="carousel-inner">
                                @for (int i = 0; i < Model.Images.Count; i++)
                                {
                                    var image = Model.Images[i];
                                    <div class="carousel-item @(i == 0 ? "active" : "")">
                                        <img src="@image.Url" class="d-block w-100" alt="@image.FileName" 
                                             style="height: 500px; object-fit: cover;">
                                    </div>
                                }
                            </div>
                            @if (Model.Images.Count > 1)
                            {
                                <button class="carousel-control-prev" type="button" data-bs-target="#propertyCarousel" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#propertyCarousel" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            }
                        </div>
                    </div>
                </div>
            }

            <div class="card mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <div>
                            <h2 class="h4 mb-1">@Model.Title</h2>
                            <p class="text-muted mb-0">
                                <i class="bi bi-geo-alt"></i> @Model.Address.GetFullAddress()
                            </p>
                        </div>
                        <span class="badge @(Model.Status == "Published" ? "bg-success" : "bg-secondary") fs-6">
                            @Model.Status
                        </span>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-cash-stack fs-4 text-primary"></i>
                                <h5 class="mt-2 mb-0">@Model.Price.ToString("N0") @Model.Currency</h5>
                                <small class="text-muted">Price</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-rulers fs-4 text-primary"></i>
                                <h5 class="mt-2 mb-0">@Model.AreaSqM mÂ²</h5>
                                <small class="text-muted">Area</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-door-closed fs-4 text-primary"></i>
                                <h5 class="mt-2 mb-0">@Model.Bedrooms</h5>
                                <small class="text-muted">Bedrooms</small>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-droplet fs-4 text-primary"></i>
                                <h5 class="mt-2 mb-0">@Model.Bathrooms</h5>
                                <small class="text-muted">Bathrooms</small>
                            </div>
                        </div>
                    </div>

                    <hr />

                    <h5>Description</h5>
                    <p class="text-muted">@Model.Description</p>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Location</h5>
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Address Line 1</dt>
                        <dd class="col-sm-9">@Model.Address.Line1</dd>

                        @if (!string.IsNullOrEmpty(Model.Address.Line2))
                        {
                            <dt class="col-sm-3">Address Line 2</dt>
                            <dd class="col-sm-9">@Model.Address.Line2</dd>
                        }

                        <dt class="col-sm-3">City</dt>
                        <dd class="col-sm-9">@Model.Address.City</dd>

                        @if (!string.IsNullOrEmpty(Model.Address.State))
                        {
                            <dt class="col-sm-3">State/Province</dt>
                            <dd class="col-sm-9">@Model.Address.State</dd>
                        }

                        <dt class="col-sm-3">Postal Code</dt>
                        <dd class="col-sm-9">@Model.Address.PostalCode</dd>

                        <dt class="col-sm-3">Country</dt>
                        <dd class="col-sm-9">@Model.Address.Country</dd>

                        @if (Model.Address.Latitude.HasValue && Model.Address.Longitude.HasValue)
                        {
                            <dt class="col-sm-3">Coordinates</dt>
                            <dd class="col-sm-9">
                                @Model.Address.Latitude.Value.ToString("F6"), @Model.Address.Longitude.Value.ToString("F6")
                            </dd>
                        }
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            @if (Model.Agent != null)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">Agent Information</h5>
                        <p class="mb-1"><strong>@Model.Agent.FullName</strong></p>
                        <p class="mb-1">
                            <i class="bi bi-envelope"></i> @Model.Agent.Email
                        </p>
                        @if (!string.IsNullOrEmpty(Model.Agent.PhoneNumber))
                        {
                            <p class="mb-0">
                                <i class="bi bi-telephone"></i> @Model.Agent.PhoneNumber
                            </p>
                        }
                    </div>
                </div>
            }

            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Property Details</h5>
                    <dl class="row mb-0">
                        <dt class="col-6">Type</dt>
                        <dd class="col-6">@Model.PropertyType</dd>

                        <dt class="col-6">Status</dt>
                        <dd class="col-6">
                            <span class="badge @(Model.Status == "Published" ? "bg-success" : "bg-secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        <dt class="col-6">Views</dt>
                        <dd class="col-6">@Model.ViewCount</dd>

                        <dt class="col-6">Created</dt>
                        <dd class="col-6">@Model.CreatedAt.ToString("MMM dd, yyyy")</dd>

                        @if (Model.UpdatedAt.HasValue)
                        {
                            <dt class="col-6">Last Updated</dt>
                            <dd class="col-6">@Model.UpdatedAt.Value.ToString("MMM dd, yyyy")</dd>
                        }
                    </dl>
                </div>
            </div>

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Actions</h5>
                    <div class="d-grid gap-2">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="bi bi-pencil"></i> Edit Property
                        </a>
                        @if (Model.Status == "Draft")
                        {
                            <form asp-action="Publish" asp-route-id="@Model.Id" method="post">
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-success w-100" 
                                        onclick="return confirm('Publish this property?')">
                                    <i class="bi bi-check-circle"></i> Publish
                                </button>
                            </form>
                        }
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
