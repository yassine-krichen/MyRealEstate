@model MyRealEstate.Web.Models.PropertyDetailViewModel

@{
    ViewData["Title"] = "Delete Property";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 text-danger">Delete Property</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="alert alert-warning" role="alert">
        <i class="bi bi-exclamation-triangle"></i>
        <strong>Warning!</strong> Are you sure you want to delete this property? This action will soft delete the property.
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Property Details</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Title</dt>
                        <dd class="col-sm-8">@Model.Title</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.PropertyType</dd>

                        <dt class="col-sm-4">Price</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Price.ToString("N0") @Model.Currency</strong>
                        </dd>

                        <dt class="col-sm-4">Area</dt>
                        <dd class="col-sm-8">@Model.AreaSqM mÂ²</dd>

                        <dt class="col-sm-4">Bedrooms</dt>
                        <dd class="col-sm-8">@Model.Bedrooms</dd>

                        <dt class="col-sm-4">Bathrooms</dt>
                        <dd class="col-sm-8">@Model.Bathrooms</dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">@Model.Status</span>
                        </dd>

                        <dt class="col-sm-4">Address</dt>
                        <dd class="col-sm-8">@Model.Address.GetFullAddress()</dd>

                        <dt class="col-sm-4">Views</dt>
                        <dd class="col-sm-8">@Model.ViewCount</dd>

                        <dt class="col-sm-4">Created</dt>
                        <dd class="col-sm-8">@Model.CreatedAt.ToString("MMMM dd, yyyy")</dd>

                        @if (Model.UpdatedAt.HasValue)
                        {
                            <dt class="col-sm-4">Updated</dt>
                            <dd class="col-sm-8">@Model.UpdatedAt.Value.ToString("MMMM dd, yyyy")</dd>
                        }
                    </dl>
                </div>
            </div>

            <div class="mt-3">
                <h6>Description</h6>
                <p>@Model.Description</p>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />
            <div class="d-flex gap-2">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Cancel
                </a>
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this property?')">
                    <i class="bi bi-trash"></i> Confirm Delete
                </button>
            </div>
        </form>
    </div>
</div>
