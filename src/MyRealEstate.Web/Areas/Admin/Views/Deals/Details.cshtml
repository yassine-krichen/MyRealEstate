@model MyRealEstate.Web.Models.DealDetailViewModel

@{
    ViewData["Title"] = "Deal Details";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-action="Index">Deals</a></li>
                    <li class="breadcrumb-item active">Details</li>
                </ol>
            </nav>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="bi bi-currency-dollar"></i> Deal Details
            @switch (Model.Status)
            {
                case MyRealEstate.Domain.Enums.DealStatus.Pending:
                    <span class="badge bg-warning text-dark ms-2">Pending</span>
                    break;
                case MyRealEstate.Domain.Enums.DealStatus.Completed:
                    <span class="badge bg-success ms-2">Completed</span>
                    break;
                case MyRealEstate.Domain.Enums.DealStatus.Cancelled:
                    <span class="badge bg-danger ms-2">Cancelled</span>
                    break;
            }
        </h1>
        <div>
            @if (Model.Status == MyRealEstate.Domain.Enums.DealStatus.Pending)
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Main Content -->
        <div class="col-lg-8">
            <!-- Financial Summary -->
            <div class="card mb-3">
                <div class="card-header" style="background-color: var(--estate-primary, #2563EB); color: white;">
                    <h5 class="mb-0"><i class="bi bi-cash-stack"></i> Financial Summary</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-cash-stack fs-4 text-primary"></i>
                                <h5 class="mt-2 mb-0">@Model.SalePrice.ToString("N0") TND</h5>
                                <small class="text-muted">Sale Price</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-percent fs-4 text-primary"></i>
                                <h5 class="mt-2 mb-0">@(Model.CommissionPercent?.ToString("N2") ?? "0")%</h5>
                                <small class="text-muted">Commission Rate</small>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="p-3 bg-light rounded text-center">
                                <i class="bi bi-wallet2 fs-4 text-success"></i>
                                <h5 class="mt-2 mb-0">@(Model.CommissionAmount?.ToString("N0") ?? "0") TND</h5>
                                <small class="text-muted">Commission Amount</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Buyer Information -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person"></i> Buyer Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row mb-0">
                        <dt class="col-sm-3">Name</dt>
                        <dd class="col-sm-9">@(Model.BuyerName ?? "N/A")</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.BuyerEmail))
                            {
                                <a href="mailto:@Model.BuyerEmail">@Model.BuyerEmail</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Phone</dt>
                        <dd class="col-sm-9">
                            @if (!string.IsNullOrEmpty(Model.BuyerPhone))
                            {
                                <a href="tel:@Model.BuyerPhone">@Model.BuyerPhone</a>
                            }
                            else
                            {
                                <span class="text-muted">N/A</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <!-- Notes -->
            @if (!string.IsNullOrWhiteSpace(Model.Notes))
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-journal-text"></i> Notes</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-0" style="white-space: pre-line;">@Model.Notes</p>
                    </div>
                </div>
            }

            <!-- Timeline -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-clock-history"></i> Timeline</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled mb-0">
                        <li class="mb-2">
                            <i class="bi bi-circle-fill text-primary me-2" style="font-size: 0.5rem;"></i>
                            <strong>Created:</strong> @Model.CreatedAt.ToString("MMMM dd, yyyy 'at' HH:mm")
                        </li>
                        @if (Model.UpdatedAt.HasValue)
                        {
                            <li class="mb-2">
                                <i class="bi bi-circle-fill text-info me-2" style="font-size: 0.5rem;"></i>
                                <strong>Last Updated:</strong> @Model.UpdatedAt.Value.ToString("MMMM dd, yyyy 'at' HH:mm")
                            </li>
                        }
                        @if (Model.ClosedAt.HasValue)
                        {
                            <li class="mb-2">
                                <i class="bi bi-circle-fill text-success me-2" style="font-size: 0.5rem;"></i>
                                <strong>Closed:</strong> @Model.ClosedAt.Value.ToString("MMMM dd, yyyy 'at' HH:mm")
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-4">
            <!-- Property Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-house-door"></i> Property</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>@Model.PropertyTitle</strong></p>
                    @if (!string.IsNullOrEmpty(Model.PropertyCity))
                    {
                        <p class="text-muted mb-2"><i class="bi bi-geo-alt"></i> @Model.PropertyCity</p>
                    }
                    <a asp-area="Admin" asp-controller="Properties" asp-action="Details" asp-route-id="@Model.PropertyId"
                       class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-eye"></i> View Property
                    </a>
                </div>
            </div>

            <!-- Agent Card -->
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-person-badge"></i> Agent</h5>
                </div>
                <div class="card-body">
                    <p class="mb-1"><strong>@Model.AgentName</strong></p>
                    @if (!string.IsNullOrEmpty(Model.AgentEmail))
                    {
                        <p class="mb-1"><i class="bi bi-envelope"></i> @Model.AgentEmail</p>
                    }
                    @if (!string.IsNullOrEmpty(Model.AgentPhone))
                    {
                        <p class="mb-0"><i class="bi bi-telephone"></i> @Model.AgentPhone</p>
                    }
                </div>
            </div>

            <!-- Linked Inquiry -->
            @if (Model.InquiryId.HasValue)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-chat-dots"></i> Linked Inquiry</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">From: <strong>@Model.InquiryVisitorName</strong></p>
                        <a asp-area="Admin" asp-controller="Inquiries" asp-action="Details" asp-route-id="@Model.InquiryId"
                           class="btn btn-sm btn-outline-info">
                            <i class="bi bi-eye"></i> View Inquiry
                        </a>
                    </div>
                </div>
            }

            <!-- Actions Card -->
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-lightning"></i> Actions</h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        @if (Model.Status == MyRealEstate.Domain.Enums.DealStatus.Pending)
                        {
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                                <i class="bi bi-pencil"></i> Edit Deal
                            </a>

                            <!-- Complete Button -->
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#completeModal">
                                <i class="bi bi-check-circle"></i> Complete Deal
                            </button>

                            <!-- Cancel Button -->
                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal" data-bs-target="#cancelModal">
                                <i class="bi bi-x-circle"></i> Cancel Deal
                            </button>
                        }
                        @if (Model.Status == MyRealEstate.Domain.Enums.DealStatus.Completed)
                        {
                            <div class="alert alert-success mb-0">
                                <i class="bi bi-check-circle"></i> This deal has been completed.
                            </div>
                        }
                        @if (Model.Status == MyRealEstate.Domain.Enums.DealStatus.Cancelled)
                        {
                            <div class="alert alert-danger mb-0">
                                <i class="bi bi-x-circle"></i> This deal has been cancelled.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Complete Deal Modal -->
@if (Model.Status == MyRealEstate.Domain.Enums.DealStatus.Pending)
{
    <div class="modal fade" id="completeModal" tabindex="-1" aria-labelledby="completeModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Complete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="modal-header">
                        <h5 class="modal-title" id="completeModalLabel">
                            <i class="bi bi-check-circle text-success"></i> Complete Deal
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to mark this deal as completed?</p>
                        <p class="text-muted">This will finalize the sale of <strong>@Model.PropertyTitle</strong> to <strong>@Model.BuyerName</strong> for <strong>@Model.SalePrice.ToString("N0") TND</strong>.</p>
                        <div class="mb-3">
                            <label for="completeNotes" class="form-label">Completion Notes (optional)</label>
                            <textarea id="completeNotes" name="notes" class="form-control" rows="3" placeholder="Any final notes..."></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle"></i> Complete Deal
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Cancel Deal Modal -->
    <div class="modal fade" id="cancelModal" tabindex="-1" aria-labelledby="cancelModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form asp-action="Cancel" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" value="@Model.Id" />
                    <div class="modal-header">
                        <h5 class="modal-title" id="cancelModalLabel">
                            <i class="bi bi-x-circle text-danger"></i> Cancel Deal
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to cancel this deal?</p>
                        <p class="text-muted">
                            This will revert the property <strong>@Model.PropertyTitle</strong> back to Published status.
                            @if (Model.InquiryId.HasValue)
                            {
                                <span>The linked inquiry will also be reopened.</span>
                            }
                        </p>
                        <div class="mb-3">
                            <label for="cancelReason" class="form-label">Cancellation Reason (optional)</label>
                            <textarea id="cancelReason" name="cancellationReason" class="form-control" rows="3" placeholder="Why is this deal being cancelled?"></textarea>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Go Back</button>
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-x-circle"></i> Cancel Deal
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
}
