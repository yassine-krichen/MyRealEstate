@model MyRealEstate.Web.Models.DealCreateViewModel

@{
    ViewData["Title"] = "Create Deal";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">Create New Deal</h1>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>

    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <h5 class="mb-3"><i class="bi bi-house-door"></i> Property & Inquiry</h5>

                        <div class="mb-3">
                            <label asp-for="PropertyId" class="form-label"></label>
                            <select asp-for="PropertyId" class="form-select" id="propertySelect">
                                <option value="">-- Select Property --</option>
                                @if (ViewBag.Properties != null)
                                {
                                    foreach (var prop in ViewBag.Properties)
                                    {
                                        <option value="@prop.Id" selected="@(Model.PropertyId.ToString() == prop.Id.ToString())">@prop.Title</option>
                                    }
                                }
                            </select>
                            <span asp-validation-for="PropertyId" class="text-danger"></span>
                        </div>

                        <div class="mb-3" id="inquirySection">
                            <label asp-for="InquiryId" class="form-label"></label>
                            <select asp-for="InquiryId" class="form-select" id="inquirySelect">
                                <option value="">-- No Linked Inquiry --</option>
                            </select>
                            <div class="form-text">
                                <small><i class="bi bi-info-circle"></i> Optionally link this deal to an existing inquiry. The inquiry will be automatically closed.</small>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3"><i class="bi bi-person"></i> Buyer Information</h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="BuyerName" class="form-label"></label>
                                <input asp-for="BuyerName" class="form-control" placeholder="Full name" />
                                <span asp-validation-for="BuyerName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BuyerEmail" class="form-label"></label>
                                <input asp-for="BuyerEmail" class="form-control" type="email" placeholder="email@example.com" />
                                <span asp-validation-for="BuyerEmail" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="BuyerPhone" class="form-label"></label>
                            <input asp-for="BuyerPhone" class="form-control" placeholder="+216 XX XXX XXX" />
                            <span asp-validation-for="BuyerPhone" class="text-danger"></span>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3"><i class="bi bi-cash-stack"></i> Financial Details</h5>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="SalePrice" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="SalePrice" type="number" step="0.01" class="form-control" />
                                    <span class="input-group-text">TND</span>
                                </div>
                                <span asp-validation-for="SalePrice" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="CommissionRate" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="CommissionRate" type="number" step="0.01" class="form-control" id="commissionRate" />
                                    <span class="input-group-text">%</span>
                                </div>
                                <span asp-validation-for="CommissionRate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="p-3 bg-light rounded">
                                <strong>Estimated Commission:</strong>
                                <span id="calculatedCommission">0 TND</span>
                            </div>
                        </div>

                        <hr class="my-4" />
                        <h5 class="mb-3"><i class="bi bi-journal-text"></i> Additional Notes</h5>

                        <div class="mb-3">
                            <label asp-for="Notes" class="form-label"></label>
                            <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Any additional notes about this deal..."></textarea>
                            <span asp-validation-for="Notes" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Deal
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-lightbulb"></i> Tips</h5>
                    <ul class="small mb-0">
                        <li class="mb-2">Deal will be created with <strong>Pending</strong> status</li>
                        <li class="mb-2">The selected property will be marked as <strong>Sold</strong></li>
                        <li class="mb-2">If linked to an inquiry, the inquiry will be <strong>Closed</strong></li>
                        <li class="mb-2">Commission is calculated automatically based on the rate</li>
                        <li>You can complete or cancel the deal later from the details page</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Commission calculator
        function calculateCommission() {
            const price = parseFloat(document.querySelector('[name="SalePrice"]').value) || 0;
            const rate = parseFloat(document.getElementById('commissionRate').value) || 0;
            const commission = price * (rate / 100);
            document.getElementById('calculatedCommission').textContent =
                commission.toLocaleString('en-US', { minimumFractionDigits: 0, maximumFractionDigits: 0 }) + ' TND';
        }

        document.querySelector('[name="SalePrice"]').addEventListener('input', calculateCommission);
        document.getElementById('commissionRate').addEventListener('input', calculateCommission);

        // Initialize
        calculateCommission();

        // Load inquiries when property changes
        document.getElementById('propertySelect').addEventListener('change', function () {
            const propertyId = this.value;
            const inquirySelect = document.getElementById('inquirySelect');
            inquirySelect.innerHTML = '<option value="">-- No Linked Inquiry --</option>';

            if (propertyId) {
                fetch(`/Admin/Deals/GetInquiriesForProperty?propertyId=${propertyId}`)
                    .then(response => response.json())
                    .then(data => {
                        data.forEach(function (item) {
                            const option = document.createElement('option');
                            option.value = item.id;
                            option.textContent = item.name;
                            inquirySelect.appendChild(option);
                        });
                    })
                    .catch(err => console.error('Error loading inquiries:', err));
            }
        });

        // Trigger inquiry loading if a property is pre-selected
        @if (Model.PropertyId != Guid.Empty)
        {
            <text>
            (function() {
                const propertySelect = document.getElementById('propertySelect');
                if (propertySelect.value) {
                    fetch(`/Admin/Deals/GetInquiriesForProperty?propertyId=${propertySelect.value}`)
                        .then(response => response.json())
                        .then(data => {
                            const inquirySelect = document.getElementById('inquirySelect');
                            data.forEach(function (item) {
                                const option = document.createElement('option');
                                option.value = item.id;
                                option.textContent = item.name;
                                @if (Model.InquiryId.HasValue)
                                {
                                    <text>
                                    if (item.id === '@Model.InquiryId.Value.ToString().ToLower()') {
                                        option.selected = true;
                                    }
                                    </text>
                                }
                                inquirySelect.appendChild(option);
                            });
                        });
                }
            })();
            </text>
        }
    </script>
}
