@model MyRealEstate.Application.Commands.Content.UpdateContentEntryCommand
@{
    ViewData["Title"] = "Edit Content Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Content" asp-action="Index">Content Management</a></li>
            <li class="breadcrumb-item active" aria-current="page">Edit - @Model.Key</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-pencil"></i> Edit Content Entry</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Key" class="form-label">Content Key <span class="text-danger">*</span></label>
                            <input asp-for="Key" class="form-control" />
                            <span asp-validation-for="Key" class="text-danger"></span>
                            <div class="form-text">
                                Changing the key may break references in your code. Use with caution.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HtmlValue" class="form-label">Content (HTML) <span class="text-danger">*</span></label>
                            <textarea asp-for="HtmlValue" class="form-control" rows="15" id="htmlEditor"></textarea>
                            <span asp-validation-for="HtmlValue" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-info-circle"></i> Content Info</h6>
                </div>
                <div class="card-body">
                    <p class="small mb-2"><strong>Key:</strong> <code>@Model.Key</code></p>
                    <p class="small mb-0"><strong>ID:</strong> <code class="text-muted">@Model.Id</code></p>
                </div>
            </div>

            <div class="card shadow-sm mt-3">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Editing Tips</h6>
                </div>
                <div class="card-body">
                    <ul class="small mb-0">
                        <li>Use the rich text editor for formatting</li>
                        <li>Click "Code" button to view/edit HTML</li>
                        <li>Preview changes before saving</li>
                        <li>Use Bootstrap classes for consistent styling</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- TinyMCE API Key Length: @(ViewBag.TinyMceApiKey?.ToString().Length ?? 0) -->
    <script src="https://cdn.tiny.cloud/1/@ViewBag.TinyMceApiKey/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
    <script>
        tinymce.init({
            selector: '#htmlEditor',
            height: 400,
            menubar: true,
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | blocks | bold italic forecolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | code | help',
            content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; font-size: 14px }'
        });
    </script>
}
