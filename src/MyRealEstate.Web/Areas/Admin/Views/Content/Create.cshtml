@model MyRealEstate.Application.Commands.Content.CreateContentEntryCommand
@{
    ViewData["Title"] = "Create Content Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Content" asp-action="Index">Content Management</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create New</li>
        </ol>
    </nav>

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-plus-circle"></i> Create New Content Entry</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Key" class="form-label">Content Key <span class="text-danger">*</span></label>
                            <input asp-for="Key" class="form-control" placeholder="e.g., HomeHero, AboutUs, FooterText" />
                            <span asp-validation-for="Key" class="text-danger"></span>
                            <div class="form-text">
                                A unique identifier for this content. Use CamelCase (e.g., "HomeHero", "ContactInfo").
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="HtmlValue" class="form-label">Content (HTML) <span class="text-danger">*</span></label>
                            <textarea asp-for="HtmlValue" class="form-control" rows="15" id="htmlEditor"></textarea>
                            <span asp-validation-for="HtmlValue" class="text-danger"></span>
                            <div class="form-text">
                                You can use HTML tags. The content will be rendered as HTML on your website.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save"></i> Create Content
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h6 class="mb-0"><i class="bi bi-lightbulb"></i> Tips</h6>
                </div>
                <div class="card-body">
                    <h6>Key Naming</h6>
                    <ul class="small">
                        <li>Use descriptive, unique names</li>
                        <li>Use CamelCase format</li>
                        <li>Example: <code>HomeHero</code>, <code>AboutUs</code></li>
                    </ul>

                    <hr>

                    <h6>HTML Content</h6>
                    <ul class="small">
                        <li>You can use any HTML tags</li>
                        <li>Include <code>&lt;h1&gt;</code>, <code>&lt;p&gt;</code>, <code>&lt;div&gt;</code>, etc.</li>
                        <li>Use Bootstrap classes for styling</li>
                    </ul>

                    <hr>

                    <h6>Common Keys</h6>
                    <ul class="small mb-0">
                        <li><code>HomeHero</code> - Homepage banner</li>
                        <li><code>AboutUs</code> - About page content</li>
                        <li><code>FooterText</code> - Footer content</li>
                        <li><code>ContactInfo</code> - Contact details</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <!-- TinyMCE API Key Length: @(ViewBag.TinyMceApiKey?.ToString().Length ?? 0) -->
    
    <script src="https://cdn.tiny.cloud/1/@ViewBag.TinyMceApiKey/tinymce/8/tinymce.min.js" referrerpolicy="origin" crossorigin="anonymous"></script>
    <script>
        tinymce.init({
            selector: '#htmlEditor',
            height: 400,
            menubar: true,
            plugins: [
                'advlist', 'autolink', 'lists', 'link', 'image', 'charmap', 'preview',
                'anchor', 'searchreplace', 'visualblocks', 'code', 'fullscreen',
                'insertdatetime', 'media', 'table', 'help', 'wordcount'
            ],
            toolbar: 'undo redo | blocks | bold italic forecolor | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | removeformat | code | help',
            content_style: 'body { font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif; font-size: 14px }'
        });
    </script>
}
